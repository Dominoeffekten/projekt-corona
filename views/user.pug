extends layout

block content
    h2= "Add a new to do"
    form(action="/users/user" + read method="POST")
        label User
        input(type="text", name="name" id="name" value=read readonly)
        br 
        label Title
        input(type="text", name="title")
        br 
        label Text
        input(type="text", name="text")
        br
        label Deadline
        input(type="date", name="deadline" id="deadline")
        br
        label Start
        input(type="date", name="start" id="start")
        br 
        button(type="submit") GO
    p.wrong= wrong
    h2= "See the to dos"
    p= "On this page you can save your to dos. If you have made an error you can make a new post, by deleting it or write the title of it in the form ðŸ˜˜"
    div#toDo
